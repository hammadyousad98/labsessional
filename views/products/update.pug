extends ../layout

block content
    h1 Update Existing Course
    form(action="/products/update/"+product._id,method="post")
        .form-group
            label(for="name") Course Name
            input#name(type="text", class="form-control",name="name")
        .form-group
            label(for="id") Course ID
            input#price(type="text", class="form-control",name="id")
        .form-group
            label(for="duration") Course Duration
            input#name(type="text", class="form-control",name="duration")
        .form-group
            label(for="fee") Course Fee
            input#name(type="text", class="form-control",name="fee")
        input(type="submit", class="btn btn-info")